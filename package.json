{
  "name": "MyClassroom",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn run start:prod || yarn run start:dev",
    "start:prod": "node index.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"yarn run client\"",
    "client": "cd client && yarn run start",
    "install": "cd client && yarn install",
    "build": "cd client && yarn run build",
    "heroku-postbuild": "yarn run build"
  },
  "repository": "https://github.com/AndrewK020/MyClassroom.git",
  "author": "Andrew <andrew.kelly20@protonmail.com>",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "eslint": "^6.1.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.6.8"
  }
}
